    <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="horizontal" android:id="@+id/retouching_edu_light" android:background="@drawable/retouching_edu_option_selected_legacy" android:layout_width="wrap_content" android:layout_height="32dp">
