        <TextView android:textSize="14sp" android:textColor="@color/google_white" android:layout_width="wrap_content" android:layout_height="18dp" android:text="@string/faceretouch_on_strong_option_desc" android:fontFamily="@font/google_sans_medium_compat" android:layout_marginStart="4dp" android:layout_marginEnd="12dp" android:lineHeight="20sp"/>
